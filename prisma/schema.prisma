model UserEmpresa{
  id  String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  razaoSocial String
  fantasia String
  cnpj String @unique
  ie String @unique @db.Char(16)
  email String @unique
  senha String
}

model UserCandidato{
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  nome String
  sobrenome String
  email String @unique
  dataNascimento String
  cpf String @unique
  senha String
}
